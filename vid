#include <iostream>
#include <cmath>
using namespace std;

//Вариант 1
int main()
{
	int a;
	int N;
	cout << "Enter the number 'a': ";
	cin >> a;
	cout << "Enter the number 'N': ";
	cin >> N;
	int *X = new int[N];
	double* R = new double[N];
	for (int i = 0; i < N; i++) 
	{
		cin >> X[i];
		if (X[i] < 1) {
			R[i] = (a - 3.0) / (sqrt(X[i] ^ 2 + 2));
			cout << "R" << i + 1 << "= " << R[i];
		}
		if (X[i] >= 1) {
			R[i] = 2.3 * a * X[i];
			cout << "R" << i + 1 << "= " << R[i];
		}
	}
	return 0;
}
