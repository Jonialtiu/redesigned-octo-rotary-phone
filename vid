#include <iostream>
#include <cmath>
using namespace std;

//Вариант 1
int main()
{
	int a, N;
	int num = 0;
	cout << "Enter the number 'a': ";
	cin >> a;
	cout << "Enter the number 'N': ";
	cin >> N;
	int *X = new int[N];
	double *R = new double[N];
	double sum = 0;
	for (int i = 0; i < N; i++) 
	{
		cout << "X" << i + 1 << ": ";
		cin >> X[i];
		if (X[i] < 1) {
			int x = X[i] * X[i] + 2;
			R[i] = (a - 3.0) / sqrt(x);
			cout << "R" << i + 1 << "= " << R[i] << "\n";
		}
		if (X[i] >= 1) {
			R[i] = 2.3 * a * X[i];
			cout << "R" << i + 1 << "= " << R[i] << "\n";
		}
	}

	for (int i = 0; i < N; i++) {
		if (R[i] < 0.0) {
			num += 1;
			sum = sum + R[i];
		}
	}
	cout << "Number of negative numbers: " << num << "\n";
	cout << "Sum of negative numbers: " << sum << "\n";
	return 0;
}
